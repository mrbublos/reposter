<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="409dp"
            android:layout_height="729dp" tools:layout_editor_absoluteX="1dp" tools:layout_editor_absoluteY="1dp"
            app:layout_anchorGravity="center" android:id="@+id/constraintLayout">
        <ListView
                android:layout_width="408dp"
                android:layout_height="606dp"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:id="@+id/configList"/>
        <Button
                android:text="add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/add"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/configList" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/clear"/>
        <Button
                android:text="clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/clear"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/configList" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="68dp" app:layout_constraintVertical_bias="0.506"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>